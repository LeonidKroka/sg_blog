<div class="post-forms">
  <%= form_for @post do |form| %>
    <% if @post.errors.any? %>
      <h1 class="title-error-message">
        Sorry, your post is not valid. Please, try again.
      </h1>
    <% end %>

    <% if @post.errors[:title].any? %>
      <div class="error-message">
        <ul>
          <% @post.errors[:title].each do |msg| %>
          <li>*<%= msg.capitalize %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <span class="post-label">
      <%= form.label :title %>
    </span>
    <%= form.text_field :title, class: "post-create-title" %> <br>

    <span class="post-label">
      <%= form.label :image %>
    </span>
    <p class="post-img">
      <%= image_tag (@post.image.url) unless @post.image.file.nil? %>
    </p>
    <p class="post-img-form">
      <%= form.file_field :image %><br>
      <label>
        <%= form.check_box :remove_image %>
        Remove avatar
      </label>
    </p>

    <% if @post.errors[:body].any? %>
      <div class="error-message">
        <ul>
          <% @post.errors[:body].each do |msg| %>
          <li>*<%= msg.capitalize %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <span class="post-label">
      <%= form.label :body %>
    </span>
    <%= form.text_area :body, class: "post-create-body" %> <br>

    <div class="text-center">
      <%= button_tag(type: 'submit', class: "btn btn-sm btn-warning") do %>
        Make'em <%= yield(:title).downcase %>
      <% end %>
    </div>
  <% end %>
</div>
